
<%- include("partials/header.ejs"); %>

<div class = "middle">
    <form action="/edited" method="post">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>

          <input type="text" id="title" name="title" placeholder="<%=title%>" value = <%=title%> required class="form-control">
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Content</label>

          <textarea id="content" placeholder = "<%= content%>" class = "form-control" name="content" rows="5" required><%=content%></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
    </form>
</div>
<%- include("partials/footer.ejs"); %>